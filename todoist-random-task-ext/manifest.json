{
    "manifest_version": 3,
    "name": "Random Task Picker for Todoist",
    "version": "1.0",
    "description": "An extension to select a random task from Todoist",
    "permissions": ["activeTab", "storage"],
    "content_scripts": [
      {
        "matches": ["https://todoist.com/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  